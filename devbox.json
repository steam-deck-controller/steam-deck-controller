{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.12.0/.schema/devbox.schema.json",
  "packages": [
    "cmake@latest",
    "gperf@latest",
    "ccache@latest",
    "gcc@latest",
    "gcc-arm-embedded@latest",
    "gcc_debug@latest",
    "gcc_multi@latest",
    "gdb@latest",
    "gnumake@latest"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "build": [
        "cd firmware/build",
        "cmake -DPICO_BOARD=pico_w -DPICO_SDK_FETCH_FROM_GIT=true ..",
        "make"
      ]
    }
  }
}
