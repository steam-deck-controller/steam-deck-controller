{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.12.0/.schema/devbox.schema.json",
  "packages": [
    "cmake@latest",
    "gperf@latest",
    "ccache@latest",
    "gcc@latest",
    "gcc-arm-embedded@latest",
    "gcc_debug@latest",
    "gcc_multi@latest",
    "gdb@latest",
    "openocd-rp2040@latest",
    "minicom@latest",
    "gnumake@latest"
  ],
    "env_from": "devbox.env",
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "debug-build": [
        "cd firmware/build",
        "cmake -DCMAKE_BUILD_TYPE=Debug ..",
        "make"
      ],
      "build": [
        "cd firmware/build",
        "cmake ..",
        "make"
      ]
    }
  }
}
