{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.12.0/.schema/devbox.schema.json",
  "packages": [
    "cmake@latest",
    "gperf@latest",
    "ccache@latest",
    "mynewt-newt@latest",
    "gcc@latest",
    "gcc-arm-embedded@latest",
    "gcc_debug@latest",
    "gcc_multi@latest",
    "gdb@latest",
    "gnumake@latest",
    "github:katyo/zephyr-rtos.nix#zephyr-sdk",
    "python312Packages.west@latest"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "install": [
        "cd firmware && newt upgrade"
      ],
      "build": [
        "cd firmware && newt build pca10056-boot"
      ],
      "test": [
        "echo \"Error: no test specified\" && exit 1"
      ]
    }
  }
}
